extends base
block append scripts   
    script(src='/js/product-detail.js')

block content
    .breadcrumbs
        .container
            .row
                .col
                    p.bread
                        span
                            a(href='/') Home
                        |  / 
                        span Product Details
    .colorlib-product
        .container
            .row.row-pb-lg.product-detail-wrap
                .col-sm-8
                    .owl-carousel
                        .item
                            .product-entry.border
                                a.prod-img(href='')
                                    img.img-fluid(src=`/images/products/${product.imageCover}` alt=`${product.name}`)
                        .item
                            .product-entry.border
                                a.prod-img(href='')
