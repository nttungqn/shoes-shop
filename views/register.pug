doctype html
head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0, shrink-to-fit=no')
    title Register - Brand
    link(rel='stylesheet' href='/form/assets/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i')
    link(rel='stylesheet' href='/form/assets/fonts/fontawesome-all.min.css')
.container
    .card.shadow-lg.o-hidden.border-0.my-5
        .card-body.p-0
            .row
                .col-lg-5.d-none.d-lg-flex
                    .flex-grow-1.bg-register-image(style='background-image: url("/form/assets/img/dogs/image2.jpeg");')
                .col-lg-7
                    .p-5
                        .text-center
                            h4.text-dark.mb-4 Create an Account!
                        form.user
                            .form-group.row
                                .col-sm-6.mb-3.mb-sm-0
                                    input#exampleFirstName.form-control.form-control-user(type='text' placeholder='First Name' name='first_name')
                                .col-sm-6
                                    input#exampleFirstName.form-control.form-control-user(type='text' placeholder='Last Name' name='last_name')
                            .form-group
                                input#exampleInputEmail.form-control.form-control-user(type='email' aria-describedby='emailHelp' placeholder='Email Address' name='email')
                            .form-group.row
                                .col-sm-6.mb-3.mb-sm-0
                                    input#examplePasswordInput.form-control.form-control-user(type='password' placeholder='Password' name='password')
                                .col-sm-6
                                    input#exampleRepeatPasswordInput.form-control.form-control-user(type='password' placeholder='Repeat Password' name='password_repeat')
                            button.btn.btn-primary.btn-block.text-white.btn-user(type='submit') Register Account
                            //- hr
                            //- a.btn.btn-primary.btn-block.text-white.btn-google.btn-user(role='button')
                            //-     i.fab.fa-google
                            //-     | &nbsp; Register with Google
                            //- a.btn.btn-primary.btn-block.text-white.btn-facebook.btn-user(role='button')
                            //-     i.fab.fa-facebook-f
                            //-     | &nbsp; Register with Facebook
                            //- hr
                        .text-center
                            a.small(href='forgot-password') Forgot Password?
                        .text-center
                            a.small(href='login') Already have an account? Login!
script(src='/form/assets/js/jquery.min.js')
script(src='/form/assets/bootstrap/js/bootstrap.min.js')
script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.js')
script(src='/form/assets/js/theme.js')
