                .col.partner-col.text-center
                    img.img-fluid(src='/images/brand-3.jpg' alt='Free html4 bootstrap 4 template')
                .col.partner-col.text-center
                    img.img-fluid(src='/images/brand-4.jpg' alt='Free html4 bootstrap 4 template')
                .col.partner-col.text-center
                    img.img-fluid(src='/images/brand-5.jpg' alt='Free html4 bootstrap 4 template')

